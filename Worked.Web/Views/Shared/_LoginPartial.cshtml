@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="" title="Saudacao">Olá @User.Identity?.Name!</a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropDownMenuManage" data-bs-toggle="dropdown" aria-expanded="false">Gerenciar</a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropDownMenuManage">
                <li><a asp-action="Index" asp-controller="UserAccount" class="dropdown-item">Usuários</a></li>
            </ul>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Home" asp-action="Logout" asp-route-returnUrl="@Url.Action("Login", "Home")">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="" title="Saudacao">Olá @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Home" asp-action="Logout" asp-route-returnUrl="@Url.Action("Login", "Home")">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
  
    }
</ul>
